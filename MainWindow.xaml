<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2C2C2C"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль закруглённых кнопок -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">

                            </Trigger>
                            <!-- Нажатие -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Контейнер формы -->
        <Border Background="White" CornerRadius="6"
                Width="800" Height="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="6"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ЛОГО -->
                <StackPanel Grid.Column="0" RenderTransformOrigin="0.495,0.277" >
                    <Image Source="logo.png" Width="208" Height="338" RenderTransformOrigin="0.478,0.496"/>
                    <!-- Замените logo.png на ваш путь -->
                    <!-- Замените logo.png на ваш путь -->
                    <!-- Замените logo.png на ваш путь -->
                    <!-- Замените logo.png на ваш путь -->

                </StackPanel>

                <!-- ПРАВАЯ ЧАСТЬ -->
                <StackPanel Grid.Column="1"
                            Margin="40,20,20,20"
                            VerticalAlignment="Center"
                            Width="280">

                    <!-- Заголовок -->
                    <TextBlock Text="Добро пожаловать!"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,30"
                               Foreground="Black"/>

                    <!-- Поле Email -->
                    <TextBlock Text="Почта" Margin="0,0,0,5"/>
                    <TextBox Text=""
                             Height="28"
                             BorderBrush="#DDD"
                             BorderThickness="0,0,0,1"
                             Background="Transparent"
                             Margin="0,0,0,20"/>

                    <!-- Поле Пароль -->
                    <TextBlock Text="Пароль" Margin="0,0,0,5"/>
                    <PasswordBox Height="28"
                                 BorderBrush="#DDD"
                                 BorderThickness="0,0,0,1"
                                 Background="Transparent"
                                 Margin="0,0,0,10"/>

                    <!-- Ссылка -->
                    <TextBlock Text="Восстановить пароль"
                               Foreground="Gray"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,20"
                               Cursor="Hand"/>

                    <!-- КНОПКИ -->
                    <StackPanel>
                        <Button Content="Войти"
                                Background="#F15B5B"
                                Style="{StaticResource RoundedButton}"
                                Margin="0,0,0,10"/>

                        <Button Content="Регистрация"
                                Background="#F58A8A"
                                Style="{StaticResource RoundedButton}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
