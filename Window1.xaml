<Window x:Class="WpfApp1.Window1"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Registration" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="20,5,20,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="20,10,20,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="20,10,20,0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Welcome back -->
                <TextBlock Text="Welcome back" 
                         Margin="20,30,20,10"
                         FontSize="20"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"/>

                <!-- Username -->
                <TextBlock Text="Имя пользователя"/>
                <TextBox Text="Введите имя пользователя"
                       Foreground="Gray"
                       x:Name="UsernameTextBox"
                       GotFocus="TextBox_GotFocus"
                       LostFocus="TextBox_LostFocus"/>

                <!-- Email -->
                <TextBlock Text="Ваша почта"/>
                <TextBox Text="exam@yandex.ru"
                       Foreground="Gray"
                       x:Name="EmailTextBox"
                       GotFocus="TextBox_GotFocus"
                       LostFocus="TextBox_LostFocus"/>

                <!-- Password -->
                <TextBlock Text="Пароль"/>
                <PasswordBox x:Name="PasswordBox"
                           Margin="20,5,20,10"
                           Padding="10"
                           FontSize="14"
                           BorderThickness="1"
                           BorderBrush="#FFCCCCCC"
                           PasswordChar="•"/>

                <!-- Repeat Password -->
                <TextBlock Text="Повторите пароль"/>
                <PasswordBox x:Name="RepeatPasswordBox"
                           Margin="20,5,20,10"
                           Padding="10"
                           FontSize="14"
                           BorderThickness="1"
                           BorderBrush="#FFCCCCCC"
                           PasswordChar="•"/>

                <!-- Register Button -->
                <Button Content="Зарегистрироваться"
                      Margin="20,20,20,10"
                      FontWeight="Bold"
                      Click="RegisterButton_Click"/>

                <!-- Back Button -->
                <Button Content="Назад"
                      Background="Transparent"
                      Foreground="#FF0078D7"
                      BorderThickness="1"
                      BorderBrush="#FF0078D7"
                      Click="BackButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>